#!/bin/bash
has() { type -p "$1" &> /dev/null; }
gitpull() {
    distro="Ubuntu"
    git -C "$HOME/Documents/neofetch" pull &> /dev/null
    git -C "$HOME/Documents/ytfzf" pull &> /dev/null
}

if has ubuntu-bug ; then
    distro="Ubuntu"
elif has brew ; then
    distro="Mac OS"
elif has termux-open ; then
    distro="Termux"
elif has pacman ; then
    distro="Arch"
elif has scoop ; then
    distro="Windows"
else
    distro=$(uname -s)
fi

gitpull
printf 'Good day, welcome to %s' "$distro!\n"
neofetch

