#!/bin/bash
has() { type -p "$1" &> /dev/null; }

if has ubuntu-bug ; then
    distro="Ubuntu"
elif [ "$(has arch && arch)" = "i386" ] ; then
    distro="Mac OS (Rosetta)"
elif has brew ; then
    distro="Mac OS"
elif has termux-open ; then
    distro="Termux"
elif has pacman ; then
    distro="Arch"
elif has scoop ; then
    distro="Windows"
else
    distro=$(uname -s)
fi

printf 'Good day, welcome to %s\n' "$distro!"
"$HOME/bin/neofetch" --ascii_colors 4 11 --colors 11 11 7 4 7 7 --ascii "$HOME/.config/neofetch/lightningrobotics.ascii"
